model news_articles {
  id           String   @id @default(uuid())
  author       String?
  title        String
  slug         String   @unique
  description  String? 
  ai_title    String?
  ai_generated_summary String?
  ai_description       String?
  url          String   @unique
  source       String
  image        String? 
  category     String
  language     String
  country      String
  published_at DateTime
  created_at   DateTime @default(now()) @db.Timestamp(6)

  @@map("news_articles")
}
