model properties {
  id                   String    @id @unique @default(uuid())
  title                String
  description          String?
  price_aed            Decimal   @db.Decimal
  property_type        String?
  bedrooms             Int?
  bathrooms            Int?
  sqft                 Int?
  area                 String?
  developer            String?
  crypto_verified      Boolean?  @default(false)
  golden_visa_eligible Boolean?  @default(false)
  images               String[]  @default([])
  amenities            String[]  @default([])
  status               String?   @default("available")
  latitude             Decimal?  @db.Decimal
  longitude            Decimal?  @db.Decimal
  created_at           DateTime? @default(now()) @db.Timestamp(6)

  @@index([area], map: "idx_properties_area")
  @@index([crypto_verified], map: "idx_properties_crypto_verified")
  @@index([price_aed], map: "idx_properties_price")
  @@index([status], map: "idx_properties_status")
  @@index([property_type], map: "idx_properties_type")
}

model supercars {
  id                String    @id @unique @default(uuid())
  brand             String
  model             String
  year              Int?
  price_per_day_aed Decimal   @db.Decimal
  images            String[]  @default([])
  specs             Json?
  whatsapp_booking  String?
  created_at        DateTime? @default(now()) @db.Timestamp(6)

  @@index([price_per_day_aed], map: "idx_supercars_price")
}

model User {
  id       String    @id @unique @default(uuid())
  name     String
  email    String    @unique
  password String
  createAt DateTime  @default(now())
  updateAt DateTime?
}

model yachts {
  id                String    @id @unique @default(uuid())
  name              String
  description       String?
  price_per_day_aed Decimal   @db.Decimal
  length_ft         Int?
  guests_max        Int?
  yacht_type        String?
  images            String[]  @default([])
  amenities         String[]  @default([])
  whatsapp_booking  String?
  created_at        DateTime? @default(now()) @db.Timestamp(6)

  @@index([price_per_day_aed], map: "idx_yachts_price")
}

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model crypto_prices {
  currency   String    @id @unique
  price_aed  Decimal   @db.Decimal
  updated_at DateTime? @default(now()) @db.Timestamp(6)
}

model leads {
  id            String    @id @unique @default(uuid())
  name          String
  email         String?
  whatsapp      String
  interest_type String[]  @default([])
  budget_max    Decimal?  @db.Decimal
  message       String?
  status        String?   @default("new")
  created_at    DateTime? @default(now()) @db.Timestamp(6)

  @@index([created_at], map: "idx_leads_created")
  @@index([status], map: "idx_leads_status")
}
